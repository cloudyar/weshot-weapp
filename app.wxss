@import "libs/weui.wxss";

page{
    background-color: #F8F8F8;
    font-size: 22px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
    margin-left: 15px;
    margin-right: 15px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 22px;
    font-weight: bolder;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 22px;
}

.media-box__hd_in-appmsg {
    margin-right: .8em;
    width: 300rpx;
    height: 300rpx;
    line-height: 60px;
    text-align: center;
}

.media-box__title {
    text-align: center;
}

.cell__bd {
    width:100%;
}

.userinfo-avatar {
    width: 75rpx;
    height: 75rpx;
    margin-top: 0px;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #ff0000;
    font-weight:bold;
}

.panel__hd {
    padding: 5px 5px 5px;
    color: #999999;
    font-size: 17px;
    position: relative;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}
.mini-btn{
    margin-right: 5px;
}

.page-section-title{
    margin-top: 10rpx;
    position: relative;
    padding: 0;
}